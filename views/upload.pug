extends layouts/main

block content
    .form-container
        form(action=`/videos${routes.upload}`, method="post")
            label(for="videoFile") Video File
            input(type="file", id="videoFile", name="videoFile" required=true)
            input(type="text", placeholder="Title", name="title" required=true)
            input(type="textarea", placeholder="Desciption", name="desciption" required=true)
            input(type="Submit", value="Upload Video")